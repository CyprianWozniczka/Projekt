{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build (g++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "-Wall",
        "Projekt.cpp",
        "-o",
        "Projekt.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build (cl.exe)",
      "type": "shell",
      "command": "cl",
      "args": [
        "/EHsc",
        "Projekt.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$msCompile"]
    }
  ]
}
